<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>com.workday.plugin.omstest</id>
    <name>Gradle Test Runner</name>
    <version>1.0.0</version>
    <vendor email="alexander.aizikivsky@workday.com" url="https://bitbucket.workday.com/users/alexander.aizikivsky">
        Alexander Aizikivsky
    </vendor>

    <description>
        Adds right-click menu options to run Gradle tests by method, class, or package, with re-run support.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="OmsTest Notifications"
                           displayType="BALLOON"
                           isLogByDefault="true"
                           toolWindowId="Run"/>
        <runLineMarkerContributor
                language="JAVA"
                implementationClass="com.workday.plugin.testrunner.actions.GutterMarkerContributor"/>
    </extensions>
    <actions>
        <action id="com.workday.plugin.testrunner.actions.ReRunLastTestAction"
                class="com.workday.plugin.testrunner.actions.ReRunLastTestAction"
                text="Re-Run OMS Test"
                description="Re-runs the last executed OMS test"
                icon="/icons/rerun.svg">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift meta R"/>
        </action>
    </actions>
</idea-plugin>